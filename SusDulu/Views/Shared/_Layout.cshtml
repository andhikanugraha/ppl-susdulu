<!DOCTYPE html>
<html lang="id">
<head>
    <title>Airlangga Airlines: @ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="@Url.Content("~/Content/img/favicon.png")" rel="shortcut icon">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")

    @Styles.Render("~/Content/themes/base/css")
</head>
<body>
    <div class="container">
        <div class="site-header">
            <img src="~/Content/img/masthead.png">
        </div>
        @RenderBody()
        <footer class="site-footer">
            <p>Hak cipta &copy; 2013 Airlangga Airlines.</p>
            <p><a href="#">Kebijakan privasi</a> &nbsp;&nbsp; <a href="#">Ketentuan penggunaan</a></p>
        </footer>
    </div>
    <script src="~/Content/js/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>